// ================= FUNGSI UTILITAS =================
function log_message($message, $type = 'INFO') {
    $log = date('[Y-m-d H:i:s]') . " [$type] " . $message . PHP_EOL;
    file_put_contents('script_log.txt', $log, FILE_APPEND);
}

